{
  "name": "illuaminate",
  "version": "0.1.0",
  "description": "Source code analysis for Lua",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/squiddev/illuaminate",
  "dependencies": {
    "ocaml": ">=4.08 <4.13",
    "@opam/dune": ">=2.7",
    "@opam/cmdliner": "*",
    "@opam/containers": ">=3.0.1",
    "@opam/fpath": "*",
    "@opam/js_of_ocaml": "*",
    "@opam/logs": "*",
    "@opam/menhir": "*",
    "@opam/menhirLib": "*",
    "@opam/mtime": "*",
    "@opam/omd": "=1.3.1",
    "@opam/ppx_deriving_yojson": "*",
    "@opam/ppx_yojson_conv_lib": "*",
    "@opam/re": "*",
    "@opam/result": "*",
    "@opam/yojson": "*",
    "@opam/lsp": "=1.5.0",
    "@opam/jsonrpc": "*"
  },
  "devDependencies": {
    "@opam/js_of_ocaml-compiler": ">=3.6.0",
    "@opam/js_of_ocaml-ppx": "*",
    "@opam/ppx_deriving": "*",
    "@opam/ppxlib": ">=0.14.0",
    "@opam/reason": "*",
    "@opam/alcotest": "*",
    "@opam/junit": "*",
    "@opam/qcheck-core": "*",
    "@opam/fmt": "*",
    "@opam/odoc": "*",
    "@opam/bisect_ppx": ">=2.5.0",
    "@opam/ocamlformat": "*",
    "@opam/opam-file-format": ">=2.1.0"
  },
  "esy": {
    "build": "dune build -p #{self.name}",
    "release": { "includePackages": [ "root" ] },
    "buildEnv": { "PATH": "#{self.root / '_build_tools' : $PATH}" }
  },
  "scripts": {
    "test": "dune build @runtest -f",
    "format": "dune build @fmt --auto-promote"
  }
}
