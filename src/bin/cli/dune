(library
 (name illuaminate_cli)
 (synopsis
  "A library containing the main CLI for illuaminate. Does not fulful all virtual modules.")
 (modules
  (:standard \ illuaminate))
 (libraries
  containers
  cmdliner
  fpath
  illuaminate.core
  illuaminate.data
  illuaminate.parser
  illuaminate.parser_md
  illuaminate.semantics
  illuaminate.lint
  illuaminate.config
  illuaminateConfigFormat
  illuaminate.html
  illuaminate.minify
  illuaminate.pattern
  illuaminate.doc_emit
  omd
  result
  logs)
 (preprocess
  (pps ppx_deriving_yojson))
 (instrumentation
  (backend bisect_ppx)))

(executable
 (name illuaminate)
 (modules illuaminate)
 (libraries unix illuaminate_cli)
 (modes byte exe))

(rule
 (target illuaminate.strip.exe)
 (action
  (run strip -o %{target} %{dep:illuaminate.exe}))
 (enabled_if
  (= %{system} "linux")))

(rule
 (target illuaminate.min.exe)
 (action
  (run upx -o %{target} %{dep:illuaminate.strip.exe}))
 (enabled_if
  (= %{system} "linux")))

(rule
 (target illuaminate.min.exe)
 (action
  (copy %{dep:illuaminate.exe} %{target}))
 (enabled_if
  (<> %{system} "linux")))

(install
 (section bin)
 (package illuaminate)
 (files
  (illuaminate.min.exe as illuaminate)))
