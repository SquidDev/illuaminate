{
  "name": "illuaminate",
  "version": "0.1.0",
  "description": "Source code analysis for Lua",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/squiddev/illuaminate",
  "dependencies": {
    "ocaml": ">= 4.08",
    "@opam/dune": ">= 2.3",
    "@opam/cmdliner": "*",
    "@opam/containers": "*",
    "@opam/fpath": "*",
    "@opam/js_of_ocaml": "*",
    "@opam/logs": "*",
    "@opam/menhir": "*",
    "@opam/omd": "*",
    "@opam/ppx_deriving_yojson": "*",
    "@opam/re": "*",
    "@opam/result": "*",
    "@opam/yojson": "*",
    "@opam/lsp": "*"
  },
  "devDependencies": {
    "@opam/js_of_ocaml-compiler": "*",
    "@opam/js_of_ocaml-ppx": "*",
    "@opam/ppx_deriving": "*",
    "@opam/ppxlib": "*",
    "@opam/reason": "*",
    "@opam/alcotest": "*",
    "@opam/junit": "*",
    "@opam/qcheck-core": "*",
    "@opam/omnomnom": "*",
    "@opam/odoc": "*",
    "@opam/bisect_ppx": "*",
    "@opam/ocamlformat": "*",
    "@opam/opam-file-format": "*"
  },
  "esy": {
    "build": "dune build -p #{self.name}",
    "release": { "includePackages": [ "root" ] },
    "buildEnv": { "PATH": "#{self.root / '_build_tools' : $PATH}" }
  },
  "resolutions": {
    "@opam/omnomnom":
      "git://github.com/SquidDev/omnomnom:omnomnom.opam#1e9e6a2c3269d4b8add8b15837379c5d45e6fedc",
    "@opam/lsp":
      "git://github.com/ocaml/ocaml-lsp:lsp.opam#ed4f500291bb316a63f16ca7d045cb19550ea806"
  },
  "scripts": {
    "test": "dune build @runtest -f",
    "format": "dune build @fmt --auto-promote"
  }
}
